<h1>New employee</h1>

<%=  form_with scope: Emp.new, url: emp_index_path, method: :post, multipart: true,local: true do |form| %>


  <div>
    <%= form.label :first_name %> <br>
    <%= form.text_field :first_name %>
  </div>


  <div>
    <%= form.label :last_name %> <br>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email %> <br>
    <%= form.email_field :email %>
  </div>
  
  <div>
    <%= form.label :age %> <br>
   <%= form.radio_button :age, '0 - 30 '%>0 - 30 <br>
   <%= form.radio_button :age, '31 - 60'%>31 - 60<br>
   <%= form.radio_button :age, '61 - 100'%>61 - 100<br>
 </div>
 <br>
 
 <div>
  <%= form.label :country %>:</b>
    <%= form.select :country, ['India', 'Australia', 'United Kingdom','United States'] %>
 </div>
 <br>
  <div>
      <%= form.label :image %>:</b>

    <%= form.file_field :image %>

   </div> 
   <br>
   
 <div>

    <%= form.label :languages_known %>:</b>
    <% ['English', 'Hindi', 'Malayalam'].each do |l| %>
      <%= form.check_box :languages_known, { multiple: true }, l, nil %>
      <%= l %>  
    <% end %>
   <div>







  <br>
  <br>

  <div>
        <%= form.submit %>
</div>
  
<% end %>